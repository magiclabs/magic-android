<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <!-- Magic functions -->
        <TextView
            android:id="@+id/magic_connect"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/magic_connect"
            android:textAlignment="center"
            android:textSize="12pt" />

        <Button
            android:id="@+id/get_wallet_info"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/magic_connect"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/mc_get_info" />

        <Button
            android:id="@+id/show_wallet"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/get_wallet_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/mc_show_ui" />

        <Button
            android:id="@+id/request_user_info"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/show_wallet"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/mc_request_user_info" />

        <Button
            android:id="@+id/disconnect"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/request_user_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/mc_disconnect" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
