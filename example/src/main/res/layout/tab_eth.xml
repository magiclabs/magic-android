<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Web3 functions -->
        <TextView
            android:id="@+id/text_web3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:text="@string/web3"
            android:textSize="12pt"
            />

        <Button
            android:id="@+id/get_address"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_web3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/get_address" />

        <Button
            android:id="@+id/get_balance"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/get_address"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/get_balance" />

        <Button
            android:id="@+id/network_id"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/get_balance"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/get_network" />

        <Button
            android:id="@+id/send_transaction"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/network_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/send_transaction" />


        <Button
            android:id="@+id/get_coinbase"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/send_transaction"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/get_coinbase" />


        <Button
            android:id="@+id/person_sign"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/get_coinbase"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/person_sign" />


        <Button
            android:id="@+id/eth_sign"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/person_sign"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/eth_sign" />

        <Button
            android:id="@+id/get_network"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/eth_sign"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/get_network" />

        <Button
            android:id="@+id/sign_typed_data_legacy"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/person_sign"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/sign_typed_data_legacy" />

        <Button
            android:id="@+id/sign_typed_data_legacy_json"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_typed_data_legacy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/sign_typed_data_legacy_json" />

        <Button
            android:id="@+id/sign_typed_data"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_typed_data_legacy_json"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/sign_typed_data" />

        <Button
            android:id="@+id/sign_typed_data_v4"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_typed_data"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/sign_typed_data_v4" />

        <Button
            android:id="@+id/deploy_contract"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_typed_data_v4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/deploy_contract" />

        <Button
            android:id="@+id/contract_read"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/deploy_contract"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/Contract_read" />

        <Button
            android:id="@+id/contract_write"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/contract_read"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/Contract_write" />

    </RelativeLayout>
</ScrollView>
